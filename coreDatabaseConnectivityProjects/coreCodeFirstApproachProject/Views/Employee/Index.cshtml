@model IEnumerable<coreCodeFirstApproachProject.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-controller="Employee" asp-action="Create">Create New Employee</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Email</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Salary</td>
                <td>@item.Email</td>
                <td>@item.City</td>
                <td>
                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>