@model coreCodeFirstApproachProject.Models.Employee;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form action="Edit" method="post">
    <div>
        <input type="hidden" asp-for="@Model.Id" /> 
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Employee Name</label>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>

    <div class="mb-3">
        <label for="salary" class="form-label">Employee Salary</label>
        <input type="text" class="form-control" asp-for="@Model.Salary">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
