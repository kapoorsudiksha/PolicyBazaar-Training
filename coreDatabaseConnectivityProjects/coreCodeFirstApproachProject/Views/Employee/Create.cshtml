
@model coreCodeFirstApproachProject.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form action="Create" method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Employee Name</label>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>

    <div class="mb-3">
        <label for="salary" class="form-label">Employee Salary</label>
        <input type="text" class="form-control" asp-for="@Model.Salary">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Employee Email</label>
        <input type="text" class="form-control" asp-for="@Model.Email">
    </div>

    <div class="mb-3">
        <label for="city" class="form-label">Employee City</label>
        <input type="text" class="form-control" asp-for="@Model.City">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
